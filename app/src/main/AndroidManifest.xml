        <activity android:name="com.sathyabama.finalyear.rideshareapp.ShowDriversMap"/>
        <activity android:name="com.sathyabama.finalyear.rideshareapp.MapsActivity"/>
        <activity android:name="com.sathyabama.finalyear.rideshareapp.ShowDriverRequest"/>
